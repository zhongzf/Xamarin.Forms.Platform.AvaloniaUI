<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamarin.Forms.Sample"
             x:Class="Xamarin.Forms.Sample.MainPage">

    <StackLayout>
        <StackLayout HeightRequest="40" Spacing="5" Orientation="Horizontal">
            <Button Text="Home" Clicked="Button_Clicked" HeightRequest="40" WidthRequest="80"></Button>
            <Button Text="Back" Clicked="Button_Back_Clicked"  HeightRequest="40" WidthRequest="80"></Button>
            <Button Text="Forward" Clicked="Button_Forward_Clicked" HeightRequest="40" WidthRequest="80"></Button>
            <Button Text="Test" Clicked="Button_Test_Clicked" HeightRequest="40" WidthRequest="80" HorizontalOptions="End" VerticalOptions="End"></Button>
        </StackLayout>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <WebView x:Name="webView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                     AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional"></WebView>
            <Button Text="Go" AbsoluteLayout.LayoutBounds="10,10,40,40"></Button>

        </AbsoluteLayout>
    </StackLayout>
</ContentPage>
